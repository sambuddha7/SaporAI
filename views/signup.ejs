<%- include("partials/header"); -%>

<form action="/signup" method="POST">
  <div>
    <label for="email">Email:</label>
    <input type="email" id="email" name="email" required>
  </div>

  <div>
    <label for="password">Password:</label>
    <input type="password" id="password" name="password" required>
  </div>

  <div>
    <label for="age">Age:</label>
    <input type="number" id="age" name="age" required>
  </div>






  <div>
    <label for="height">Height in cm:</label>
    <input type="number" id="height" name="height" required>
  </div>
  <div>
    <label for="weight">Weight in kg:</label>
    <input type="number" id="weight" name="weight" required>
  </div>


<!-- //Allergy section -->


  <div>
    <label>Do you have any allergies?</label>
      <br>
      <input type="checkbox" name="allergies" value="peanuts" checked>
      <label for="peanuts">Peanuts</label>
      <br>
      <input type="checkbox" name="allergies" value="shellfish" checked>
      <label for="shellfish">Shellfish</label>
      <br>
      <input type="checkbox" name="allergies" value="dairy" checked>
      <label for="dairy">Dairy</label>
      <br>
      <input type="checkbox" name="allergies" value="soybeans" checked>
      <label for="dairy">Soybeans</label>
      <br>
  </div>



<!-- activity level -->
<div>
  <label>Select level of activity</label>
    <br>
    <input type="radio" name="activity" value="zero" checked>
    <label for="zero">0</label>
    <br>
    <input type="radio" name="activity" value="medium" checked>
    <label for="medium">1-3</label>
    <br>
    <input type="radio" name="activity" value="high" checked>
    <label for="high">3+</label>
    <br>

</div>

  <!-- Second set of radio inputs -->


  <div>
    <label>Select Fitness Goals</label>
      <br>

      <input type="radio" name="fitness" value="bulk" checked>
      <label for="bulk">Bulk</label>
      <br>
      <input type="radio" name="fitness" value="shred" checked>
      <label for="shred">Shred</label>
      <br>

      <input type="radio" name="fitness" value="maintenance" checked>
      <label for="maintenance">Maintenance</label>
      <br>

  </div>


  <div>
    <button type="">Sign Up!</button>
  </div>
</form>



<%- include("partials/footer"); -%>
